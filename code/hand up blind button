local handsup = fales

CreateThread(function()
    while true do
        Wait(0)

        if handsUp then
            TaskHandsUp(PlayerPedId(),250, PlayerPedId(),
  -1, true)
           end
       end
end

RegisterCommand('+handsup', function()
    handsup = true
end, fales)

RegisterKeyMapping('+handsup', 'Hands Up', 'keyboard', 'x')
RegisterKeyMapping('say hi', 'Say hi', 'keyboard', 'o')

